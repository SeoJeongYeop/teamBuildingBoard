{{>layout/header}}
<h1>게시글 등록</h1>
<div id="main-container" class="row">
    {{>layout/sidebar}}
    <div id="main-content" class="col-md-9">
        <div id="board-title-bar" class="d-flex justify-content-between">
            <div id="board-title">
                게시글 작성
            </div>
        </div>
        <form>
            <div class="form-group">
                <label for="selectBoard">게시판</label>
                <select name="board" id="selectBoard" {{#board}}data-target="{{id}}{{/board}}" required>
                    <option data-placeholder="true"></option>
                    {{#boards}}
                        <option value="{{id}}">{{title}}</option>
                    {{/boards}}
                </select>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" id="title" class="form-control" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                {{#userName}}
                    <input type="text" id="author" class="form-control" value="{{userName}}" readonly>
                    <input type="hidden" id="user" value="{{userId}}">
                {{/userName}}
                {{^userName}}
                    <input type="text" id="author" class="form-control" placeholder="작성자를 입력하세요" required>
                {{/userName}}
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea id="content" class="form-control" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>
        <div class="d-flex justify-content-end my-3 gap-2">
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" id="btn-save" class="btn btn-primary">등록</button>
        </div>
    </div>
</div>

{{>layout/footer}}