{{>layout/header}}
<div id="main-container" class="row">
    {{>layout/sidebar}}
    <div id="main-content" class="col-md-9">
        <div id="board-title-bar" class="d-flex justify-content-between">
            <div id="board-title">
                게시글 수정
            </div>
        </div>
        <form>
            <input type="hidden" id="id" class="form-control" value="{{post.id}}" readonly>
            <div class="form-group mb-2">
                <label for="selectBoard">게시판</label>
                <select name="board" id="selectBoard" {{#board}}data-target="{{id}}{{/board}}" required>
                    <option data-placeholder="true"></option>
                    {{#boards}}
                        <option value="{{id}}">{{title}}</option>
                    {{/boards}}
                </select>
            </div>
            <div class="form-group mb-2">
                <label for="title">제목</label>
                <input type="text" id="title" class="form-control" value="{{post.title}}">
            </div>
            <div class="form-group mb-2">
                <label for="author">작성자</label>
                <input type="text" id="author" class="form-control" value="{{post.author}}" readonly>
            </div>
            <div class="form-group mb-2">
                <label for="content">내용</label>
                <textarea id="content" class="form-control">{{post.content}}</textarea>
            </div>
        </form>
        <div class="d-flex justify-content-end my-3 gap-2">
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" id="btn-update" class="btn btn-primary">수정완료</button>
        </div>
    </div>
</div>
{{>layout/footer}}
