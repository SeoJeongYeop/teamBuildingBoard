{{>layout/header}}
<div id="main-container" class="row">
    {{>layout/sidebar}}
    <div id="main-content" class="col-md-9">
        <div id="board-title-bar" class="d-flex justify-content-between">
            <div id="board-title">
            {{#post}}
                {{#board}}
                <a href="/community/boards/{{id}}">
                    {{title}}
                </a>
                {{/board}}
                {{^board}}
                    <a href="#">이름모를 게시판</a>
                {{/board}}
            {{/post}}
            </div>
        </div>
        <div id="article-content">
            <div id="article-wrapper">
                {{#post}}
                <div class="d-flex flex-row justify-content-between">
                    <div id="article-title">
                        {{title}}
                    </div>
                    <div id="article-metadata">
                        <div id="article-datetime">
                            <div>
                                {{createdDate}}
                            </div>
                        </div>
                        {{#isAuthor}}
                        <div class="d-flex flex-column justify-content-center">
                            <a href="/posts/update/{{id}}">수정</a>
                            <a href="/posts/delete/{{id}}">삭제</a>
                        </div>
                        {{/isAuthor}}
                    </div>
                </div>
                <div class="gray-border"></div>
                <div>
                    <div id="article-body">
                        {{content}}
                    </div>
                </div>
                {{/post}}
                {{^post}}<div>게시글이 없습니다.</div>{{/post}}
            </div>
        </div>
    </div>
</div>
{{>layout/footer}}
