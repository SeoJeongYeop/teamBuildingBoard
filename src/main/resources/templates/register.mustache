{{>layout/header}}
<div class="d-flex justify-content-center container my-5">
    <div class="col-8">
        <form id="signin-form" method="post" action="." class="row">
            <div class="col-md-6 mb-3">
                <label for="username" class="form-label">Username</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                    <button class="btn btn-outline-secondary" type="button" id="duplicate-check">Check</button>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="github-id" class="form-label">GitHub ID</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="github-id" name="github-id" placeholder="GitHub ID">
                    {{!GitHub API를 이용해 중복 아이디 체크할 수 있음}}
                    {{!<button class="btn btn-outline-secondary" type="button" id="github-id-check">Check</button>}}
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="password">Password</label>
                <div class="text-weak form-label">비밀번호는 4자 이상이어야 합니다.</div>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" minlength="4" required onChange="checkPassword();">
            </div>
            <div class="col-md-6 mb-3">
                <label for="password-check">Password Check</label>
                <div id="password-check-sign" class="text-weak form-label">비밀번호를 다시 입력해주세요.</div>
                <input type="password" class="form-control" id="password-check" name="password-check" placeholder="Password" minlength="4" required onChange="checkPassword();">
            </div>
            <div class="col-md-12 mb-3">
                <label for="personal-email" class="form-label">Email</label>
                <div class="d-flex">
                    <input type="text" class="form-control email-input" id="personal-email" name="personal-email" placeholder="연락용 Email"
                           required>
                    <span style="line-height: 38px;">@</span>
                    <input type="text" id="email-domain" name="personal-email-domain" class="form-control email-domain" placeholder="이메일 도메인" maxlength="18"/>
                    <select id="email-domain-select" class="form-select form-control email-domain email-select" onChange="setEmailDomain(this.id, this.value);">
                        <option value="" selected>직접입력</option>
                        <option value="g.skku.edu">g.skku.edu</option>
                        <option value="skku.edu">skku.edu</option>
                        <option value="naver.com">naver.com</option>
                        <option value="gmail.com">gmail.com</option>
                        <option value="kakao.com">kakao.com</option>
                    </select>
                </div>
            </div>
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">가입하기</button>
            </div>
        </form>
    </div>
</div>
{{>layout/footer}}
